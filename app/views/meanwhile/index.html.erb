    <!-- JavaScript -->
    
    <script>
      function changePic(path){
        $('#pic').attr('src',path); 
      }
      function changeCaption(text){
        $('#caption').text(text); 
      }
      function changeTitle(text){
        $('#titleText').text("Meanwile In..." + text); 
      }


       function submitForm() {
            //alert("checked the button - worked");
            $.ajax({
                 type:'get', 
                 url: '/meanwhile/index', 
                 data: $.param({ text: $("#textBox").val()}),
                 success: function (data) {
                  console.log(data);
                  // alert(data.url);
                  changePic(data.url);
                  changeCaption(data.caption);
                  changeTitle(data.text)
                 }
            });
       }
    </script>
