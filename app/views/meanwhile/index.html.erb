<div id="bodyContainer">
    <div id="titleContainer">
        <div class="row" id="title">
            <h1 id = "titleText">
              Meanwhile In...
            </h1>
        </div>
    </div>

    <div id="picContainer">
    <table id="picTable">
      <tr>
        <td>
          <!-- <button type="button" onclick="submitForm()" id="button">Explore!</button> -->
          <div id="picContainer">
            <div id="picOutline">
              <%= image_tag "instagram_example.jpg", :alt => "Snapshot", :id => "pic", :onclick => "submitForm()"%>
            </div>
            <%= image_tag "waiting.gif", :alt => "Loading...", :id => "waiting"%>
            <!-- <img id="waiting" src="waiting.gif" alt="Loading..."> -->
          </div>
        </td>
      </tr>
      <tr>
        <td>
        <div id="captionSpace">
            <p id="caption">Go forth and explore the World! Having Fun!</p>
        </div>
        </td>
      </tr>
    </table>
    </div>
</div>

<nav role="navigation" id="footerBar">
